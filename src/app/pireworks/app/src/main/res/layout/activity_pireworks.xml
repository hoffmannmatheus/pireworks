<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pireworks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pireworks.app.pireworks.PireworksActivity">


    <TextView
        android:id="@+id/pireworks_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#0000FF"
        android:text="@string/text_bluetooth_off" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/pireworks_device_name"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/selectB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectA"
                    android:layout_alignStart="@+id/selectA"
                    android:layout_alignEnd="@+id/selectA" />

                <Button
                    android:id="@+id/selectC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectB"
                    android:layout_alignStart="@+id/selectB" />

                <Button
                    android:id="@+id/selectD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectC"
                    android:layout_alignStart="@+id/selectC" />

                <Button
                    android:id="@+id/selectE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectD"
                    android:layout_alignStart="@+id/selectD" />

                <Button
                    android:id="@+id/selectF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectE"
                    android:layout_alignStart="@+id/selectE" />

                <Button
                    android:id="@+id/selectG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:layout_below="@+id/selectF"
                    android:layout_alignStart="@+id/selectF" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/thresholdInput"
                    android:inputType="number|numberSigned|numberDecimal"
                    android:textSize="14sp"
                    android:text="0000"
                    android:textAlignment="center"
                    android:layout_alignStart="@+id/selectA"
                    android:layout_alignEnd="@+id/selectA" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/intensityInput"
                    android:inputType="number|numberSigned|numberDecimal"
                    android:textSize="14sp"
                    android:text="0000"
                    android:textAlignment="center"
                    android:layout_alignStart="@+id/thresholdInput"
                    android:layout_alignEnd="@+id/selectA"
                    android:layout_below="@+id/thresholdInput" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/offsetInput"
                    android:inputType="number|numberSigned|numberDecimal"
                    android:textSize="14sp"
                    android:text="0000"
                    android:textAlignment="center"
                    android:layout_below="@+id/intensityInput"
                    android:layout_alignStart="@+id/intensityInput"
                    android:layout_alignEnd="@+id/intensityInput" />

                <TextView
                    android:text="Trigger Threshold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/triggerThreshold"
                    android:textSize="22sp"
                    android:layout_below="@+id/pireworks_device_name"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Amplitude Intensity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amplitudeInstensity"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/intensityInput"
                    android:layout_alignBottom="@+id/intensityInput"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Trigger Offset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/triggerOffset"
                    android:textSize="22sp"
                    android:layout_alignBaseline="@+id/offsetInput"
                    android:layout_alignBottom="@+id/offsetInput"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note B"
                    android:layout_alignBaseline="@+id/selectB"
                    android:layout_alignBottom="@+id/selectB"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note C"
                    android:layout_alignBaseline="@+id/selectC"
                    android:layout_alignBottom="@+id/selectC"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note D"
                    android:layout_alignBaseline="@+id/selectD"
                    android:layout_alignBottom="@+id/selectD"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note E"
                    android:layout_alignBaseline="@+id/selectE"
                    android:layout_alignBottom="@+id/selectE"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note F"
                    android:layout_alignBaseline="@+id/selectF"
                    android:layout_alignBottom="@+id/selectF"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/noteG"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note G"
                    android:layout_alignBaseline="@+id/selectG"
                    android:layout_alignBottom="@+id/selectG"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/selectA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="SELECT"
                    android:layout_alignBaseline="@+id/noteA"
                    android:layout_alignBottom="@+id/noteA"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="13dp" />

                <Button
                    android:text="SAVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/saveButton"
                    android:layout_below="@+id/selectG"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/noteA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Note A"
                    android:layout_below="@+id/offsetInput"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
